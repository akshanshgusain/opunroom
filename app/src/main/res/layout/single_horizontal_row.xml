<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="08dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        app:civ_border_color="@color/colorGroup3"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/imageView_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_status_online"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gilroy_black"
        android:gravity="center"
        android:maxLines="2"
        android:text="Some qwqqwwqqdsfsdfsdfsw"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView_profession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="01dp"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="08dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />


</androidx.constraintlayout.widget.ConstraintLayout>